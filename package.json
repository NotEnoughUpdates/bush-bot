{
	"name": "mb-bot-ts",
	"version": "1.0.0",
	"description": "a bot for the moulberry bush discord server(discord.gg/moulberry)",
	"main": "src/bot.ts",
	"repository": "https://github.com/NotEnoughUpdates/mb-bot-ts.git",
	"author": "TrashCan, Ironm00n, Tyman",
	"license": "CC-BY-NC-SA-4.0",
	"dependencies": {
		"@types/node": "^14.14.37",
		"chalk": "^4.1.0",
		"common-tags": "^1.8.0",
		"discord-akairo": "^8.1.0",
		"discord-api-types": "^0.12.1",
		"discord.js": "https://github.com/discordjs/discord.js#master",
		"discord.js-minesweeper": "^1.0.6",
		"fuzzy-search": "^3.2.1",
		"got": "^11.8.2",
		"moment": "^2.29.1",
		"mongodb": "^3.6.5",
		"mongoose": "5.12.3",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.19",
		"synchronized-promise": "^0.3.1",
		"typescript": "^4.2.3"
	},
	"scripts": {
		"test": "yarn run lint && yarn run build && yarn format-check",
		"build": "yarn rimraf dist/ && yarn tsc",
		"lint": "yarn eslint --ext js,jsx,ts,tsx src",
		"format-check": "yarn prettier . --check",
		"start": "yarn build && node --trace-warnings -r source-map-support/register dist/bot.js",
		"format": "yarn prettier . --write"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.19.0",
		"eslint": "^7.23.0",
		"eslint-config-prettier": "^8.1.0",
		"prettier": "^2.2.1"
	},
	"engines": {
		"node": ">=14.15.1"
	},
	"prettier": {
		"singleQuote": true,
		"semi": true,
		"trailingComma": "none",
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"useTabs": true,
		"printWidth": 173
	}
}
